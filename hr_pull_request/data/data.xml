<odoo>
    <data>
        <record id="action_fetch_pr_list" model="ir.actions.server">
            <field name="name">Fetch PRs</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="binding_model_id" ref="hr.model_hr_employee" />
            <field name="state">code</field>
            <field name="code">
                records.action_fetch_pr()
            </field>
        </record>

        <record id="action_fetch_pr_with_comment_list" model="ir.actions.server">
            <field name="name">Fetch PRs with comments</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="binding_model_id" ref="hr.model_hr_employee" />
            <field name="state">code</field>
            <field name="code">
                records.action_fetch_pr(with_comments=True)
            </field>
        </record>
    </data>
</odoo>