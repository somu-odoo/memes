<odoo>
    <record id="action_pull_request_employee" model="ir.actions.act_window">
        <field name="name">Pull Request Employees</field>
        <field name="res_model">pull.request.employee</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_pull_request_employee_form" model="ir.ui.view">
        <field name="name">pull.request.employee.form</field>
        <field name="model">pull.request.employee</field>
        <field name="arch" type="xml">
            <form string="Pull Request Employee">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="action_fetch_pr"
                                type="object" icon="fa-star">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">
                                            Pull Requests
                                    </span>
                                </div>
                        </button>
                    </div>
                    <group>
                        <field name="employee_id"/>
                        <!-- <field name="name"/> -->
                        <field name="github_user"/>
                        <!-- <button name="action_fetch_pr"
                        type="object"
                        string="Fetch GitHub PRs"
                        class="oe_highlight"/> -->
                    </group>
                    <notebook>
                        <page string="PRs">
                                <field name="pr_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_pull_request_employee_tree" model="ir.ui.view">
        <field name="name">pull.request.employee.tree</field>
        <field name="model">pull.request.employee</field>
        <field name="arch" type="xml">
            <tree string="Pull Request Employees">
                <!-- <field name="name"/> -->
                <field name="employee_id"/>
                <field name="github_user"/>
            </tree>
        </field>
    </record>
</odoo>