<?xml version="1.0"?>
<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <group>
                    <field name="github_url"/>
                    <field name="employee_assessment" readonly="1"/>
                </group>
            </xpath>
            <xpath expr="//form/sheet/notebook" position="inside">
                <page string="GitHub Data">
                    <field name="github_data_ids">
                        <tree>
                            <field name="name"/>
                            <field name="pull_request_id"/>
                            <field name="commit_count"/>
                            <button name="action_view_comments"
                            type="object" string="View Comments"
                            class="oe_stat_button" icon="fa-comments"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
